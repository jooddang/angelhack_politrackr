<div class="container main_color">
	<div class="row sub_color4"> 
		<div class="text-center">
			<h3>New Prediction</h3>
		</div>
	</div>

	<form action="/issue/create">
	<div class="new_predict_controls">
		<input type="text" class="form-control" id="title" size="90" maxlength="140" placeholder="Write a question you want to predict here..."/>
	</div>
	<div class="new_predict_controls">
		<input type="text" id="choiceOne" class="form-control" size="70" maxlength="140" placeholder="Write the first option here..."/>
	</div>
	<div class="new_predict_controls">
		<input type="text" id="choiceTwo" class="form-control" size="70" maxlength="140" placeholder="Write the second option here..."/>
	</div>
	<h4 class="main_color">Deadline </h4>

	<div class="row new_predict_controls">
		<span class="col-lg-4 col-md-4 col-xs-2">
			<select id="month" class="form-control">
		      <option>Jan</option>
		      <option>Feb</option>
		      <option>Mar</option>
		      <option>Apr</option>
		      <option>May</option>
		      <option>Jun</option>
		      <option>Jul</option>
		      <option>Aug</option>
		      <option>Sep</option>
		      <option>Oct</option>
		      <option>Nov</option>
		      <option>Dec</option>
		    </select>
		    </span>
<span class="col-lg-4 col-md-4 col-xs-2">
			<select id="day" class="form-control">
			    <% for (var i = 1; i < 32; i++) { %>
			      <option><%=i%></option>
			    <% } %>
			</select>
			</span>
			<span class="col-lg-4 col-md-4 col-xs-2">
			<select id="year" class="form-control">
			    <% for (var i = 2016; i > 2012; i--) { %>
			      <option><%=i%></option>
			    <% } %>
			</select>
		</span>
	</div>
	<input class="btn btn-primary col-xs-2 new_predict_controls" value="save" id="subb">
	<input type="hidden" id="owner" value="sessionStorage.account">
	</form>
	</div>


</div>
<%- partial('../partials/footer') %>